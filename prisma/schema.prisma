generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Blogs {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  marker      String
  image       String
  link        String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Projects {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  image       String
  website     String
  github      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
